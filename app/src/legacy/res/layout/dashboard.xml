<?xml version="1.0" encoding="utf-8"?>
<core.DashboardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="bottom"
    app:umanoFadeColor="@android:color/transparent">

    <!-- MAIN CONTENT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <core.ColorfulBackground
            android:id="@+id/bg_colors"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <core.PacketsView
            android:id="@+id/bg_packets"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/bg_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bg_logo_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/bg_logo_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:src="@drawable/bg_header" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bg_off_logo"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_window" />

        <LinearLayout
            android:id="@+id/bg_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bg_start_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="swipe up to start"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/bg_start_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="48dp"
                android:layout_marginTop="12dp"
                android:rotation="-90"
                android:src="@drawable/ic_chevron_right"
                android:tint="@color/colorActive" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/bg_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="160dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:alpha="0"
                android:maxWidth="500dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bg_info_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"/>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </RelativeLayout>

    <!-- SLIDING LAYOUT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false">

        <View
            android:id="@+id/fg_drag"
            android:layout_width="match_parent"
            android:layout_marginTop="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top" />

        <View
            android:id="@+id/fg_nav_panel"
            android:layout_width="1988dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="-92dp"
            android:layout_marginTop="92dp"
            android:alpha="0.7"
            android:background="@drawable/circle" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fg_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="108dp"
            android:maxWidth="500dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/fg_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="92dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:maxWidth="500dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fg_placeholder_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:paddingTop="20dp"
                android:src="@drawable/ic_block"
                android:tint="@color/colorActive" />

            <TextView
                android:id="@+id/fg_placeholder_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/colorActive"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="Ads" />

        </LinearLayout>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/fg_nav_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="120dp"
            app:dsv_orientation="horizontal" />

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/fg_nav_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            app:bnbActiveColor="@color/colorActive"
            app:bnbBackgroundColor="@color/colorBackground"
            app:bnbBackgroundStyle="background_style_static"
            app:bnbInactiveColor="@color/colorInactive"
            app:bnbMode="mode_shifting" />

    </FrameLayout>
</core.DashboardView>
